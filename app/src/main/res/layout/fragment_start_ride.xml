<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewmodel.fragments.StartRideFragment"
    android:id="@+id/start_ride_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bike_location"
            android:hint="@string/bike_location"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/start_ride_bike_list"/>
        </ScrollView>

        <Button
            android:id="@+id/start_ride_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_ride" />
    </LinearLayout>
</FrameLayout>